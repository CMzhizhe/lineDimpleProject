<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DiscountView">
        <attr name="discount_view_under_color" format="color"/>
        <attr name="discount_view_foreground_color" format="color"/>
        <attr name="discount_view_paint_width" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="RadianView">
        <attr name="radian_view_under_color" format="color"/>
        <attr name="radian_view_foreground_color" format="color"/>
        <attr name="radian_view_paint_width" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="RectangularView">
        <attr name="rectangular_view_under_color" format="color"/>
        <attr name="rectangular_view_foreground_color" format="color"/>
        <attr name="rectangular_view_paint_width" format="dimension"/>
        <attr name="rectangular_view_corner" format="dimension"/>
        <attr name="rectangular_view_foreground_color_array" format="reference"/>
        <attr name="rectangular_view_foreground_gradient_style" format="integer">
            <enum name="GRADIENT_STYLE_1" value="1"/>
            <enum name="GRADIENT_STYLE_2" value="2"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="LineView">
        <attr name="line_view_under_color" format="color"/>
        <attr name="line_view_foreground_color" format="color"/>
        <attr name="line_view_paint_width" format="dimension"/>
        <attr name="line_view_corner" format="dimension"/>
        <attr name="line_view_foreground_color_array" format="reference"/>
        <attr name="line_view_foreground_gradient_style" format="integer">
            <enum name="GRADIENT_STYLE_1" value="1"/>
            <enum name="GRADIENT_STYLE_2" value="2"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="StepsLineView">
        <attr name="step_live_view_under_color" format="color"/>
        <attr name="step_live_view_foreground_color" format="color"/>
        <attr name="step_live_view_paint_width" format="dimension"/>
        <attr name="step_live_view_gap" format="dimension"/>
        <attr name="step_live_view_corner" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="RecentView">
        <attr name="recent_view_under_color" format="color"/>
        <attr name="recent_view_foreground_color" format="color"/>
        <attr name="recent_view_corner" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BorderLine">
        <attr name="border_line_under_color" format="color"/>
        <attr name="border_line_paint_width" format="dimension"/>
        <attr name="border_line_corner" format="dimension"/>
        <attr name="border_line_foreground_color" format="color"/>
        <attr name="border_line_foreground_border_color" format="color"/>
        <attr name="border_line_foreground_paint_width" format="dimension"/>
        <attr name="border_line_foreground_border_paint_width" format="dimension"/>
    </declare-styleable>

</resources>